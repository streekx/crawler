<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_margin="20dp"
        android:background="@drawable/search_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search anything..."
            android:textColor="#FFFFFF"
            android:textColorHint="#888888" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_container"
        android:layout_margin="20dp"
        android:columnCount="2"
        android:rowCount="3">
        
        <Button android:id="@+id/btn_history" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="History" />
        <Button android:id="@+id/btn_threads" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="Threads" />
        <Button android:id="@+id/btn_projects" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="Projects" />
        <Button android:id="@+id/btn_settings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="Settings" />
        <Button android:id="@+id/btn_security" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:text="Security" />
    </GridLayout>

</RelativeLayout>
